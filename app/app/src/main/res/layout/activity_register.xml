<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/shopee_orange"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo Tài Khoản"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký để mua sắm ngay!"
                android:textColor="#FFEEEE"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="24dp"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="13sp"
                android:textColor="@color/gray_text"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nhập họ và tên"
                android:background="@null"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="13sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nhập email"
                android:inputType="textEmailAddress"
                android:background="@null"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textSize="13sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Tối thiểu 6 ký tự"
                android:inputType="textPassword"
                android:background="@null"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu"
                android:textSize="13sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:background="@null"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ĐĂNG KÝ"
                android:backgroundTint="@color/shopee_orange"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>
        </LinearLayout>

        <!-- Login link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản? "
                android:textColor="@color/gray_text"/>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="@color/shopee_orange"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
