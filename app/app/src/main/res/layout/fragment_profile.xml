<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header với gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile_header"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:background="@drawable/avatar_circle" />

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_profile"
                    android:contentDescription="@null" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="14dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Nhóm menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_my_orders"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_menu_item"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="Đơn mua của tôi"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:drawablePadding="14dp"
                android:drawableEnd="@android:drawable/ic_menu_more" />

            <TextView
                android:id="@+id/tv_my_vouchers"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_menu_item"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="Kho voucher"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:drawablePadding="14dp"
                android:drawableEnd="@android:drawable/ic_menu_more" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_menu_item"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="Thiết lập tài khoản"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:drawablePadding="14dp"
                android:drawableEnd="@android:drawable/ic_menu_preferences" />

            <TextView
                android:id="@+id/tv_notifications"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_menu_item"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="Thông báo"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:drawablePadding="14dp"
                android:drawableEnd="@android:drawable/ic_menu_more" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_menu_item"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="Liên hệ shop"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:drawablePadding="14dp"
                android:drawableEnd="@android:drawable/ic_menu_more" />

            <TextView
                android:id="@+id/tv_favorites"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_menu_item"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="Sản phẩm yêu thích"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:drawablePadding="14dp"
                android:drawableEnd="@android:drawable/ic_menu_more" />
        </LinearLayout>

        <!-- Nút đăng xuất / đăng nhập -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_btn_logout"
            android:text="ĐĂNG XUẤT"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true" />
    </LinearLayout>
</ScrollView>
