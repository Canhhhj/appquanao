<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/shopee_orange"
        android:orientation="vertical"
        android:gravity="center">
        
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:background="@drawable/bg_search"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Van A"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
            
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn mua"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:drawableEnd="@android:drawable/ic_menu_more" />
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kho voucher"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_marginTop="2dp"
        android:drawableEnd="@android:drawable/ic_menu_more" />
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thiết lập tài khoản"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:drawableEnd="@android:drawable/ic_menu_preferences" />
        
</LinearLayout>
