<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light">

    <!-- Toolbar có nút thoát / quay lại -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_product_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/shopee_orange"
        android:elevation="4dp"
        app:titleTextColor="@color/white"
        app:navigationIcon="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_product_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tất cả sản phẩm"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/gray_dark" />

        <TextView
            android:id="@+id/tv_empty_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có sản phẩm phù hợp"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:visibility="gone"
            android:layout_marginTop="4dp" />

        <ProgressBar
            android:id="@+id/progress_products"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_products_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@color/gray_light" />

</LinearLayout>

