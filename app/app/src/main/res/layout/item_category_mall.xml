<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="14dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/white"
        android:minHeight="140dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_category_mall"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_category_circle"
                android:padding="12dp"
                app:tint="@color/shopee_orange"
                android:src="@android:drawable/ic_menu_agenda"
                android:contentDescription="@null" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_category_name_mall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Danh mục"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem sản phẩm →"
            android:textSize="12sp"
            android:textColor="@color/shopee_orange"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
